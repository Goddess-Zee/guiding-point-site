---
import "../styles/global.css";

const {
  title = "Guiding Point Consulting",
  description = "Web + AI consulting that bridges tech, creativity, and human connection.",
  path = "/",
} = Astro.props;

const site = Astro.site?.toString().replace(/\/$/, "") || "";
const canonical = site ? `${site}${path}` : path;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>{title}</title>
    <meta name="description" content={description} />
    <link rel="canonical" href={canonical} />

    <!-- Basic social sharing -->
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:type" content="website" />
    <meta property="og:url" content={canonical} />
    <meta name="twitter:card" content="summary_large_image" />

    <style>
      html { scroll-behavior: smooth; }
      ::selection { background: rgba(220, 206, 170, 0.35); } /* brand beige */
    </style>

    <!-- Reveal animation styles (global) -->
    <style is:inline>
      .reveal {
        opacity: 0;
        transform: translateY(10px);
        transition: opacity 0.7s ease, transform 0.7s ease;
        will-change: opacity, transform;
      }
      .reveal--in {
        opacity: 1;
        transform: translateY(0);
      }
      @media (prefers-reduced-motion: reduce) {
        .reveal {
          opacity: 1;
          transform: none;
          transition: none;
        }
      }
    </style>
  </head>

  <body class="bg-[#32345A] text-[#FDFBFB] antialiased">
    <header class="sticky top-0 z-50 border-b border-white/10 bg-[#32345A]/85 backdrop-blur">
      <nav class="mx-auto flex max-w-6xl items-center justify-between px-4 py-4">
        <a href="/" class="font-semibold tracking-tight">
          Guiding Point <span class="text-[#DCCEAA]">Consulting</span>
        </a>

        <div class="hidden items-center gap-5 text-sm sm:flex">
          <a class="text-white/70 hover:text-[#DCCEAA] transition" href="/services">Services</a>
          <a class="text-white/70 hover:text-[#DCCEAA] transition" href="/case-studies">Case Studies</a>
          <a class="text-white/70 hover:text-[#DCCEAA] transition" href="/about">About</a>
          <a
            class="rounded-full bg-[#AC3430] px-4 py-2 font-semibold text-[#FDFBFB] hover:opacity-90 transition"
            href="/contact"
          >
            Request an Audit
          </a>
        </div>

        <a
          class="sm:hidden rounded-full border border-white/15 px-3 py-1 text-sm text-white/80 hover:bg-white/5 transition"
          href="/contact"
        >
          Contact
        </a>
      </nav>
    </header>

    <main class="mx-auto max-w-6xl px-4">
      <slot />
    </main>

    <footer class="mx-auto mt-24 max-w-6xl px-4 pb-12 text-sm text-white/70">
      <div class="border-t border-white/10 pt-8">
        <p>Web + AI consulting that bridges tech, creativity, and human connection.</p>
        <div class="mt-3 flex flex-wrap gap-x-5 gap-y-2">
          <a class="hover:text-[#DCCEAA] transition" href="/services">Services</a>
          <a class="hover:text-[#DCCEAA] transition" href="/case-studies">Case Studies</a>
          <a class="hover:text-[#DCCEAA] transition" href="/about">About</a>
          <a class="hover:text-[#DCCEAA] transition" href="/contact">Contact</a>
        </div>
        <p class="mt-4 text-white/60">Â© {new Date().getFullYear()} Guiding Point Consulting, LLC</p>
      </div>
    </footer>

    <!-- Reveal observer script (global, runs once per page load) -->
    <script is:inline>
      const els = document.querySelectorAll(".reveal");
      if (els.length) {
        const obs = new IntersectionObserver(
          (entries) => {
            entries.forEach((e) => {
              if (e.isIntersecting) {
                e.target.classList.add("reveal--in");
                obs.unobserve(e.target);
              }
            });
          },
          { threshold: 0.12 }
        );

        els.forEach((el) => obs.observe(el));
      }
    </script>
  </body>
</html>
