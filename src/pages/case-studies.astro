    </div>
  </section>

  <!-- CTA Section -->
  <section class="cta-section">
    <div class="container">
      <div class="cta-content">
        <h2>Ready to start your project?</h2>
        <p>Let's discuss how we can modernize your website and content operations.</p>
        <a href="/contact" class="btn btn-primary">Get in Touch</a>
      </div>
    </div>
  </section>

</Layout>

<style>
  /* Parallax Header */
  .parallax-section {
    position: relative;
    overflow: hidden;
    min-height: auto;
    display: flex;
    align-items: center;
    padding: var(--space-2xl) 0 var(--space-xl);
  }

  .parallax-bg {
    position: absolute;
    top: -50%;
    left: 0;
    right: 0;
    bottom: -50%;
    z-index: 0;
    will-change: transform;
  }

  .gradient-orb {
    position: absolute;
    border-radius: 50%;
    filter: blur(100px);
    opacity: 0.5;
    animation: float 15s ease-in-out infinite;
  }

  .orb-1 {
    width: 600px;
    height: 600px;
    background: radial-gradient(circle, #ac3430 20%, #ff6b6b 40%, transparent 70%);
    top: -150px;
    left: -150px;
    z-index: 0;
    animation-delay: 0s;
  }

  .orb-2 {
    width: 500px;
    height: 500px;
    background: radial-gradient(circle, #dcceaa 20%, #f5e6c8 40%, transparent 70%);
    top: 50px;
    right: -100px;
    z-index: 0;
    animation-delay: -7s;
  }

  @keyframes float {
    0%, 100% {
      transform: translate(0, 0) scale(1);
    }
    25% {
      transform: translate(30px, -30px) scale(1.05);
    }
    50% {
      transform: translate(-20px, 20px) scale(0.95);
    }
    75% {
      transform: translate(20px, 30px) scale(1.02);
    }
  }

  .hero-content {
    position: relative;
    z-index: 1;
    text-align: center;
  }

  .page-header {
    border-bottom: 1px solid var(--gray-200);
  }

  .page-header h1 {
    margin-bottom: var(--space-lg);
  }

  .hero-text {
    max-width: 700px;
    margin: 0 auto;
    font-size: 1.125rem;
    color: var(--gray-600);
    line-height: 1.6;
  }

  .case-studies {
    padding: var(--space-3xl) 0;
  }

  .case-study-card {
    max-width: 1000px;
    margin: 0 auto var(--space-3xl);
    background: white;
    border-radius: 12px;
    border: 1px solid var(--gray-200);
    overflow: hidden;
    transition: all 0.3s ease;
  }

  .case-study-card:hover {
    box-shadow: 0 12px 40px rgba(0, 0, 0, 0.1);
    transform: translateY(-4px);
  }

  .case-study-image {
    width: 100%;
    aspect-ratio: 16 / 9;
    background: var(--gray-100);
    display: flex;
    align-items: center;
    justify-content: center;
    border-bottom: 1px solid var(--gray-200);
  }

  .placeholder-image {
    text-align: center;
  }

  .placeholder-image span {
    font-size: 1.5rem;
    font-weight: 600;
    color: var(--gray-400);
  }

  .case-study-content {
    padding: var(--space-2xl);
  }

  .case-study-content h2 {
    font-size: 2rem;
    margin-bottom: var(--space-xs);
  }

  .case-subtitle {
    color: var(--rust);
    font-weight: 600;
    margin-bottom: var(--space-xl);
  }

  .case-section {
    margin-bottom: var(--space-lg);
  }

  .case-section h3 {
    font-size: 1rem;
    text-transform: uppercase;
    letter-spacing: 0.05em;
    color: var(--gray-600);
    margin-bottom: var(--space-sm);
    font-weight: 600;
  }

  .case-section p {
    color: var(--gray-700);
    line-height: 1.7;
  }

  .case-section ul {
    list-style: none;
    padding: 0;
  }

  .case-section li {
    padding-left: 1.5rem;
    margin-bottom: 0.5rem;
    position: relative;
    color: var(--gray-700);
  }

  .case-section li::before {
    content: "•";
    position: absolute;
    left: 0;
    color: var(--rust);
    font-weight: bold;
  }

  @media (max-width: 768px) {
    .case-study-content {
      padding: var(--space-lg);
    }

    .case-study-content h2 {
      font-size: 1.5rem;
    }

    .gradient-orb {
      width: 300px;
      height: 300px;
    }

    .parallax-section {
      min-height: auto;
    }
  }
</style>

<script>
  window.addEventListener('scroll', () => {
    const scrolled = window.pageYOffset;
    const parallaxBg = document.querySelector('.parallax-bg') as HTMLElement;
    
    if (parallaxBg && scrolled < window.innerHeight) {
      parallaxBg.style.transform = `translateY(${scrolled * 0.5}px)`;
    }
  });
</script>